# ===========================================
# NEUROPLAN BACKEND - CONFIGURACIÓN DE DESARROLLO
# ===========================================

# ===========================================
# BASE DE DATOS POSTGRESQL
# ===========================================
# Configuración para desarrollo local
DATABASE_URL="postgresql://admin:1234@localhost:5432/neuroplan?schema=public"

# Configuración alternativa (si prefieres variables separadas)
# DB_HOST=localhost
# DB_PORT=5432
# DB_USERNAME=admin
# DB_PASSWORD=1234
# DB_DATABASE=neuroplan

# ===========================================
# AUTENTICACIÓN JWT
# ===========================================
JWT_SECRET="neuroplan-super-secret-key-change-in-production"
JWT_EXPIRES_IN="24h"

# ===========================================
# SERVIDOR
# ===========================================
PORT=3001
NODE_ENV="development"
FRONTEND_URL="http://localhost:8080"
ALLOWED_ORIGINS="http://localhost:8080,http://localhost:5173,http://localhost:3000"

# ===========================================
# AWS SERVICES
# ===========================================
AWS_REGION="eu-west-1"
AWS_ACCESS_KEY_ID="your_aws_access_key_id"
AWS_SECRET_ACCESS_KEY="your_aws_secret_access_key"
AWS_S3_BUCKET="neuroplan-demo-bucket"

# AWS Bedrock (Claude AI)
AWS_BEDROCK_API_KEY="your_bedrock_api_key"

# AWS Textract (OCR)
AWS_TEXTRACT_API_KEY="your_textract_api_key"

# AWS Comprehend (NLP)
AWS_COMPREHEND_API_KEY="your_comprehend_api_key"

# AWS Polly (Text-to-Speech)
AWS_POLLY_API_KEY="your_polly_api_key"

# ===========================================
# SERVICIOS EXTERNOS
# ===========================================
# Claude AI (Anthropic)
CLAUDE_API_KEY="your_claude_api_key"

# ElevenLabs (Text-to-Speech)
ELEVENLABS_API_KEY="your_elevenlabs_api_key"
ELEVENLABS_VOICE_ID="pNInz6obpgDQGcFmaJgB"

# N8N (Workflow Automation)
N8N_URL="http://localhost:5678"
N8N_API_KEY="your_n8n_api_key"
N8N_WEBHOOK_URL="your_n8n_webhook_url"

# Linkup (Educational Resources)
LINKUP_API_KEY="your_linkup_api_key"

# ===========================================
# CONFIGURACIÓN DE ARCHIVOS
# ===========================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH="./uploads"

# ===========================================
# DESARROLLO
# ===========================================
FRONTEND_REPO="https://github.com/marianamarinflor622/neuroplan-frontend.git"

# ===========================================
# INSTRUCCIONES DE CONFIGURACIÓN
# ===========================================
# 1. Copia este archivo como .env
# 2. Configura PostgreSQL:
#    - Usuario: admin
#    - Password: 1234
#    - Base de datos: neuroplan
# 3. Actualiza las API keys según tus servicios
# 4. Para producción, cambia todas las contraseñas y secretos
